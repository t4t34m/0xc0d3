export LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libgtk3-nocsd.so.0
PATH="/home/t4t/perl5/bin${PATH:+:${PATH}}"; export PATH;
PERL5LIB="/home/t4t/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"; export PERL5LIB;
PERL_LOCAL_LIB_ROOT="/home/t4t/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
PERL_MB_OPT="--install_base \"/home/t4t/perl5\""; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE=/home/t4t/perl5"; export PERL_MM_OPT;
